    <!-- –ú–æ–¥–∞–ª—å–Ω–µ –≤—ñ–∫–Ω–æ –¥–ª—è –ü–æ–º–∏–ª–æ–∫/–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω—å -->
    <div id="modal" class="modal-overlay">
        <div class="modal-content">
            <h3 id="modal-title" class="text-2xl font-bold text-white mb-4">–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è</h3>
            <p id="modal-message" style="color: var(--secondary-text-color);" class="mb-6">
                –¢–µ–∫—Å—Ç –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è...
            </p>
            <button id="modal-close-btn" class="btn modal-btn-close">
                <span class="btn-text">–ó–∞–∫—Ä–∏—Ç–∏</span>
                <span class="btn-spinner"></span>
            </button>
        </div>
    </div>

    <!-- ====================================================== -->
    <!-- JAVASCRIPT –õ–û–ì–Ü–ö–ê (–ì–Ü–ë–†–ò–î–ù–ê: FILE B ENGINE + FILE A FEATURES) -->
    <!-- ====================================================== -->
    <script>
        // === CUSTOM CHART RENDERER (THE ARTIST - FROM FILE B) ===
        // –¶–µ–π –∫–ª–∞—Å –º–∞–ª—é—î –∫–∞—Ä—Ç—É —Å–∞–º–æ—Å—Ç—ñ–π–Ω–æ, –≤–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É—é—á–∏ –ª–∏—à–µ —Ü–∏—Ñ—Ä–∏ –∑ –±—ñ–±–ª—ñ–æ—Ç–µ–∫–∏
        class SimpleGoldChart {
            constructor(horoscope, size = 220) {
                this.bodies = horoscope.CelestialBodies;
                this.ascendant = horoscope.Ascendant;
                this.size = size;
                this.center = size / 2;
                this.radius = (size / 2) - 10;
                this.innerRadius = this.radius * 0.7; // –ú—ñ—Å—Ü–µ –¥–ª—è –ª—ñ–Ω—ñ–π
            }

            // –ö–æ–Ω–≤–µ—Ä—Ç—É—î –∑–æ–¥—ñ–∞–∫–∞–ª—å–Ω–∏–π –≥—Ä–∞–¥—É—Å (0-360) –≤ —Ä–∞–¥—ñ–∞–Ω–∏ –¥–ª—è SVG
            degToRad(deg) {
                // 0 –û–≤–Ω–∞ = 0 –≥—Ä–∞–¥—É—Å—ñ–≤.
                return (deg - 90) * (Math.PI / 180);
            }

            render() {
                let svg = `<svg viewBox="0 0 ${this.size} ${this.size}" xmlns="http://www.w3.org/2000/svg">`;
                
                // 1. –ó–æ–¥—ñ–∞–∫–∞–ª—å–Ω–µ –ö–æ–ª–æ (–û—Å–Ω–æ–≤–∞)
                svg += `<circle cx="${this.center}" cy="${this.center}" r="${this.radius}" fill="none" stroke="#cda45e" stroke-width="1.5" opacity="0.8" />`;
                svg += `<circle cx="${this.center}" cy="${this.center}" r="${this.innerRadius}" fill="none" stroke="#cda45e" stroke-width="0.5" opacity="0.5" />`;

                // 2. –õ—ñ–Ω—ñ—ó –¥–æ–º—ñ–≤ (12 —Å–µ–∫—Ç–æ—Ä—ñ–≤)
                for (let i = 0; i < 360; i += 30) {
                    const rad = this.degToRad(i);
                    const x1 = this.center + Math.cos(rad) * this.innerRadius;
                    const y1 = this.center + Math.sin(rad) * this.innerRadius;
                    const x2 = this.center + Math.cos(rad) * this.radius;
                    const y2 = this.center + Math.sin(rad) * this.radius;
                    svg += `<line x1="${x1}" y1="${y1}" x2="${x2}" y2="${y2}" stroke="#cda45e" stroke-width="0.5" opacity="0.5" />`;
                }

                // 3. –ü–ª–∞–Ω–µ—Ç–∏ (–¢–æ—á–∫–∏)
                const planetSymbols = {
                    sun: "‚òâ", moon: "‚òΩ", mercury: "‚òø", venus: "‚ôÄ", mars: "‚ôÇ",
                    jupiter: "‚ôÉ", saturn: "‚ôÑ", ascendant: "ASC"
                };

                const drawBody = (bodyKey, symbol) => {
                    let body = this.bodies[bodyKey];
                    if (!body && bodyKey === 'ascendant') body = this.ascendant;
                    
                    if (body) {
                        const deg = body.ChartPosition.Ecliptic.DecimalDegrees;
                        const rad = this.degToRad(deg);
                        
                        // –ü–æ–∑–∏—Ü—ñ—è –Ω–∞ –∫–æ–ª—ñ
                        const x = this.center + Math.cos(rad) * (this.innerRadius + 8); // –¢—Ä–æ—Ö–∏ –≤—Å–µ—Ä–µ–¥–∏–Ω—ñ –º—ñ–∂ –∫–æ–ª–∞–º–∏
                        const y = this.center + Math.sin(rad) * (this.innerRadius + 8);
                        
                        // –õ—ñ–Ω—ñ—è –≤—ñ–¥ —Ü–µ–Ω—Ç—Ä—É
                        const cx = this.center + Math.cos(rad) * (this.innerRadius - 5);
                        const cy = this.center + Math.sin(rad) * (this.innerRadius - 5);
                        
                        svg += `<line x1="${this.center}" y1="${this.center}" x2="${cx}" y2="${cy}" stroke="#cda45e" stroke-width="1" opacity="0.3" />`;
                        
                        // –°–∏–º–≤–æ–ª
                        svg += `<circle cx="${x}" cy="${y}" r="2" fill="#cda45e" />`;
                        // –¢–µ–∫—Å—Ç (—Ç—Ä–æ—Ö–∏ –∑—Å—É–Ω—É—Ç–∏–π)
                        const tx = this.center + Math.cos(rad) * (this.radius + 12);
                        const ty = this.center + Math.sin(rad) * (this.radius + 12);
                        
                        svg += `<text x="${tx}" y="${ty}" fill="#cda45e" font-size="10" text-anchor="middle" dominant-baseline="middle" font-family="Arial">${symbol}</text>`;
                    }
                };

                drawBody('sun', '‚òâ');
                drawBody('moon', '‚òΩ');
                drawBody('venus', '‚ôÄ');
                drawBody('mars', '‚ôÇ');
                drawBody('jupiter', '‚ôÉ');
                drawBody('ascendant', 'AC');

                svg += `</svg>`;
                return svg;
            }
        }

        // === GLOBAL LOGIC & VARIABLES ===
        const isCanvas = typeof __app_id !== 'undefined';
        const apiKey = isCanvas ? "" : "AIzaSyA-Dg4XkSu5zl3TNOnJ8c1s95y3G_EiUPc"; 
        
        const apiFlashUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
        const apiProUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
        
        const EMAIL_BACKEND_URL = 'https://europe-west1-destinycode-982fa.cloudfunctions.net/sendReportEmail'; 
        const PDF_BACKEND_URL = 'https://europe-west1-destinycode-982fa.cloudfunctions.net/createPDF'; 

        let userBirthData = {
            date: '',
            time: '',
            city: '',
            geo: null,
            chartSvg: null,
            planets: []
        };
        
        let generatedReportData = null; // –ó–±–µ—Ä—ñ–≥–∞—î–º–æ –ø–æ–≤–Ω–∏–π HTML –∑–≤—ñ—Ç—É

        // === HELPER FUNCTIONS ===
        
        // 1. Astro Initialization Check
        function initAstroLibrary() {
            if (window.isAstroLibReady && window.CircularNatalHoroscope) {
                return true;
            }
            if (window.CircularNatalHoroscope) {
                return true;
            }
            return false;
        }

        // 2. Fallback Zodiac Calculator
        function getSimpleZodiacSign(dateString) {
            const date = new Date(dateString);
            const day = date.getDate();
            const month = date.getMonth() + 1;
            if((month == 1 && day <= 19) || (month == 12 && day >=22)) return "–ö–æ–∑–µ—Ä—ñ–≥";
            if((month == 1 && day >= 20) || (month == 2 && day <= 18)) return "–í–æ–¥–æ–ª—ñ–π";
            if((month == 2 && day >= 19) || (month == 3 && day <= 20)) return "–†–∏–±–∏";
            if((month == 3 && day >= 21) || (month == 4 && day <= 19)) return "–û–≤–µ–Ω";
            if((month == 4 && day >= 20) || (month == 5 && day <= 20)) return "–¢–µ–ª–µ—Ü—å";
            if((month == 5 && day >= 21) || (month == 6 && day <= 20)) return "–ë–ª–∏–∑–Ω—é–∫–∏";
            if((month == 6 && day >= 21) || (month == 7 && day <= 22)) return "–†–∞–∫";
            if((month == 7 && day >= 23) || (month == 8 && day <= 22)) return "–õ–µ–≤";
            if((month == 8 && day >= 23) || (month == 9 && day <= 22)) return "–î—ñ–≤–∞";
            if((month == 9 && day >= 23) || (month == 10 && day <= 22)) return "–¢–µ—Ä–µ–∑–∏";
            if((month == 10 && day >= 23) || (month == 11 && day <= 21)) return "–°–∫–æ—Ä–ø—ñ–æ–Ω";
            if((month == 11 && day >= 22) || (month == 12 && day <= 21)) return "–°—Ç—Ä—ñ–ª–µ—Ü—å";
            return "–ó–Ω–∞–∫ –Ω–µ –≤–∏–∑–Ω–∞—á–µ–Ω–æ";
        }

        // 3. Render Planet Fingerprint & SVG Chart
        function renderPlanetaryFingerprint() {
            if (!initAstroLibrary()) return; 
            
            const calcData = userBirthData;
            const geo = calcData.geo || { latitude: 50.45, longitude: 30.52, timezone: "Europe/Kyiv" };

            if (!calcData.date) return;

            try {
                const { Origin, Horoscope } = window.CircularNatalHoroscope;
                const parts = calcData.date.split('-');
                const timeParts = (calcData.time || "12:00").split(':');
                
                const origin = new Origin({
                    year: parseInt(parts[0]), month: parseInt(parts[1])-1, date: parseInt(parts[2]),
                    hour: parseInt(timeParts[0]), minute: parseInt(timeParts[1]),
                    latitude: parseFloat(geo.latitude), longitude: parseFloat(geo.longitude), timezone: geo.timezone
                });
                
                const horoscope = new Horoscope({ origin: origin, houseSystem: "placidus", zodiac: "tropical" });
                
                // 1. Generate SVG using our Custom Artist
                const artist = new SimpleGoldChart(horoscope);
                const svgString = artist.render();
                userBirthData.chartSvg = svgString; // Save for PDF
                
                // 2. Generate Planet List (Text)
                const bodies = horoscope.CelestialBodies;
                const getPos = (k, l) => {
                    let b = bodies[k];
                    if(!b && k==='ascendant') b = horoscope.Ascendant;
                    
                    if(b) {
                        const d = b.ChartPosition.Ecliptic.DecimalDegrees % 30;
                        const deg = Math.floor(d);
                        const min = Math.floor((d-deg)*60);
                        const sec = Math.floor(((d-deg)*60 - min)*60);
                        return `<div class="astro-data-item"><strong>${l}:</strong> ${b.Sign.label} ${deg}¬∞ ${min}' ${sec}"</div>`;
                    }
                    return '';
                };
                
                const listHtml = [
                    getPos('sun', '–°–æ–Ω—Ü–µ'), getPos('moon', '–ú—ñ—Å—è—Ü—å'), getPos('ascendant', 'ASC'),
                    getPos('venus', '–í–µ–Ω–µ—Ä–∞'), getPos('mars', '–ú–∞—Ä—Å'), getPos('jupiter', '–Æ–ø—ñ—Ç–µ—Ä')
                ].join('');

                // 3. Display
                const container = document.getElementById('paywall-astro-data');
                if (container) {
                    container.innerHTML = `
                        <div class="astro-data-box">
                            <div class="astro-data-title">–¢–≤—ñ–π –ö–æ—Å–º—ñ—á–Ω–∏–π –í—ñ–¥–±–∏—Ç–æ–∫</div>
                            <div class="astro-chart-preview">${svgString}</div>
                            <div class="astro-data-grid">${listHtml}</div>
                        </div>
                    `;
                    container.style.display = 'block';
                }
            } catch (e) {
                console.error("Render error:", e);
            }
        }

